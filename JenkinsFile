pipeline {
    
	agent any 
    
	stages {
        
		stage('Clean') { 
            steps {
                bat 'mvn clean' 
            }
        }
		
		stage('Compile') { 
            steps {
                bat 'mvn compile' 
            }
        }
		
		stage('Package') { 
            steps {
                bat 'mvn package' 
            }
        }
		
		stage('Install') { 
            steps {
                bat 'mvn install' 
            }
        }
		
		stage('Test') { 
            steps {
                bat 'mvn test' 
            }
        }
    }
	
	post {
        
		always {
		
            archiveArtifacts artifacts: ''spring-boot-samples\\spring-boot-sample-atmosphere\\target\\*.jar'', fingerprint: true
			
        }
    }
}